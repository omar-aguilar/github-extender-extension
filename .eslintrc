{
  "extends": ["airbnb"],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "webextensions": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      { "devDependencies": true }
    ],
    "no-bitwise": 0,
    "no-underscore-dangle": 0,
    "class-methods-use-this": 0,
    "react/destructuring-assignment": [
      "error",
      "always",
      { "ignoreClassFields": true }
    ]
  },
  "import/resolver": {
    "node": {
        "paths": ["./src"]
    }
  }
}